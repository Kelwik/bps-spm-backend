generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Satker {
  id Int @id @default(autoincrement())
  kodeSatker String @unique
  nama String
  eselon String

  spms Spm[]
}

model Spm {
  id Int @id @default(autoincrement())
  nomorSpm String @unique
  tahunAnggaran Int
  tanggal DateTime
  JumlahTotal Int

  satkerId Int
  satker Satker @relation(fields: [satkerId],references: [id])
}

model KodeAkun {
  id    Int    @id @default(autoincrement())
  kode  String @unique
  nama  String

  flags Flag[]
}

model Flag {
  id         Int      @id @default(autoincrement())
  nama       String
  tipe       FlagType
  kodeAkun   KodeAkun @relation(fields: [kodeAkunId], references: [id])
  kodeAkunId Int

  @@unique([kodeAkunId, nama])
}


enum FlagType {
  IYA
  TIDAK
  IYA_TIDAK
}


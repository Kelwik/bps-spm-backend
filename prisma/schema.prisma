generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Satker {
  id Int @id @default(autoincrement())
  kodeSatker Int @unique
  nama String

  spms Spm[]
}

model Spm {
  id Int @id @default(autoincrement())
  nomorSpm String @unique
  tahunAnggaran Int
  tanggal DateTime
  JumlahTotal Int

  satkerId Int
  satker Satker @relation(fields: [satkerId],references: [id])
}
